extends layout

block content
	h1= title

	ul.list-group
	each author in author_list
		li.list-group-item(style='padding: 0')
			a(href=author.url style='display: inline-block; padding: 12px 8px') #{author.name}
			| #{author.birth_date_formatted}#{author.death_date_formatted}

	else
		li.list-group-item.text-danger There are no authors